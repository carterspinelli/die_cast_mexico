modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"
packages = ["imagemagick"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Gatsby Server"

[[workflows.workflow]]
name = "Gatsby Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install && npx gatsby develop -p 5000 -H 0.0.0.0"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "npx gatsby serve -p 5000 -H 0.0.0.0"]
build = ["sh", "-c", "npm install --legacy-peer-deps && npx gatsby build"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000
